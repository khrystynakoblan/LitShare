<Window x:Class="LitShare.Presentation.ViewAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        MinWidth="800" MinHeight="500">

    <Grid>

        <!-- Верхня панель -->
        <Grid Margin="20,20,20,0" VerticalAlignment="Top">
            <Button Content="LitShare"
                FontSize="24"
                FontWeight="Bold"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#444"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Cursor="Hand"
                Click="HomePage_Click"/>


        </Grid>

        <!-- Центрований контент -->
        <Border Width="900"
                Padding="40"
                Background="#f9f9f9"
                BorderBrush="#ddd"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Ліва частина -->
                <StackPanel Grid.Column="0" VerticalAlignment="Top">
                    <Border Background="#eee" CornerRadius="4" Margin="0,0,0,10">
                        <Image x:Name="PostImage"
                               Width="300"
                               Height="400"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <Button Content="Профіль користувача"
                            x:Name="UserProfileButton"
                            Background="#444"
                            Foreground="White"
                            Padding="10,5"
                            FontSize="14"
                            Width="300"
                            Height="41"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"
                            Click="UserProfile_Click"/>
                </StackPanel>

                <!-- Права частина -->
                <Grid Grid.Column="1" Margin="30,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <TextBlock x:Name="TitleText" Text="Назва" FontSize="26" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock x:Name="AuthorText" Text="Автор" FontSize="16" Margin="0,5,0,0"/>
                        <TextBlock Text="Опис" FontWeight="Bold" FontSize="16" Margin="0,15,0,0"/>
                        <TextBlock x:Name="DescriptionText"
                                   TextWrapping="Wrap" Margin="0,5,0,0" FontSize="14" Foreground="#444">
                            Lorem ipsum dolor sit amet...
                        </TextBlock>
                        <TextBlock Text="Місто:" FontWeight="Bold" FontSize="16" Margin="0,15,0,0"/>
                        <TextBlock x:Name="LocationText" Text="Львів" FontSize="14" Foreground="#444"/>
                        <TextBlock Text="Тип угоди:" FontWeight="Bold" FontSize="16" Margin="0,15,0,0"/>
                        <TextBlock x:Name="DealTypeText" Text="Безкоштовно" FontSize="14" Foreground="#444"/>
                    </StackPanel>

                    <!-- Нижні кнопки -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Поскаржитися на оголошення"
                                x:Name="ReportAdButton"
                                Background="#555"
                                Foreground="White"
                                Padding="10,5"
                                Height="39"
                                Width="202"
                                Margin="0,0,10,0"
                                Click="ReportAd_Click"/>

                        <Button Content="&lt; Назад"
                                x:Name="BackButton"
                                Background="White"
                                BorderBrush="#555"
                                Padding="10,5"
                                Foreground="#333"
                                Height="39"
                                Click="Back_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
