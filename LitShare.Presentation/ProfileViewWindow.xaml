<Window x:Class="LitShare.Presentation.ProfileViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare — Перегляд профілю"
        Height="720" Width="940"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка LitShare -->
            <Button Content="LitShare"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="HomeButton_Click"/>

            <!-- Кнопка Мій профіль -->
            <Button Content="Мій профіль"
                    FontSize="16"
                    Foreground="Gray"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Click="MyProfileButton_Click"/>
        </Grid>

        <!-- Основна частина -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фото користувача + ім’я -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,10,20,0" HorizontalAlignment="Center">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="100"
                        Width="140" Height="140" HorizontalAlignment="Center">
                    <Ellipse Fill="#EAEAEA"/>
                </Border>
                <TextBlock Text="Іван Петренко"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Дані користувача -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Область:" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock Text="Рівненська" Grid.Column="1"/>
                            <TextBlock Text="Район:" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock Text="Острозький" Grid.Column="3"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Місто:" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock Text="Острог" Grid.Column="1"/>
                            <TextBlock Text="Контактні дані:" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock Text="+380 99 379 44 55" Grid.Column="3"/>
                        </Grid>

                        <TextBlock Text="Про себе:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock TextWrapping="Wrap">
                            Книги для мене — це спосіб пізнавати світ і людей.
                            У моїй бібліотеці можна знайти художню літературу, поезію,
                            філософські трактати та історичні видання.
                            Завжди радий обговорити прочитане й поділитися улюбленими книжками.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Книги користувача -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Книги користувача:"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Margin="0,0,0,10"/>

                        <UniformGrid Columns="3" Rows="2" Margin="0,0,0,10">
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="Зникла" FontWeight="Bold"/>
                                    <Rectangle Height="45" Fill="#EEE" Margin="0,5,0,5"/>
                                    <TextBlock Text="Піан Флін" FontSize="13"/>
                                    <TextBlock Text="Обмін"
                                               Foreground="#2C3E50"
                                               FontSize="12"
                                               TextDecorations="Underline"
                                               Cursor="Hand"/>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="Місто дівчат" FontWeight="Bold"/>
                                    <Rectangle Height="45" Fill="#EEE" Margin="0,5,0,5"/>
                                    <TextBlock Text="Елізабет Гілберт" FontSize="13"/>
                                    <TextBlock Text="Обмін"
                                               Foreground="#2C3E50"
                                               FontSize="12"
                                               TextDecorations="Underline"
                                               Cursor="Hand"/>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="1984" FontWeight="Bold"/>
                                    <Rectangle Height="45" Fill="#EEE" Margin="0,5,0,5"/>
                                    <TextBlock Text="Джордж Орвелл" FontSize="13"/>
                                    <TextBlock Text="Обмін"
                                               Foreground="#2C3E50"
                                               FontSize="12"
                                               TextDecorations="Underline"
                                               Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Назад -->
                        <Button Content="← Назад"
                                Width="130"
                                Height="40"
                                HorizontalAlignment="Left"
                                Background="#555"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BackButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>