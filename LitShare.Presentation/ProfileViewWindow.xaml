<Window x:Class="LitShare.Presentation.ProfileViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare — Перегляд профілю"
        Height="720" Width="940"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="LitShare"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="Black"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="HomeButton_Click"/>

            <Button Content="Мій профіль"
                    FontSize="16"
                    Foreground="Gray"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Click="MyProfileButton_Click"/>
        </Grid>

        <!-- Основна частина -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фото + ім’я -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,10,20,0" HorizontalAlignment="Center">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="100"
                        Width="140" Height="140" HorizontalAlignment="Center">
                    <Ellipse Fill="#EAEAEA"/>
                </Border>
                <TextBlock x:Name="txtName"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Дані користувача -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Область:" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock x:Name="txtRegion" Grid.Column="1"/>
                            <TextBlock Text="Район:" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock x:Name="txtDistrict" Grid.Column="3"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Місто:" FontWeight="Bold" Grid.Column="0"/>
                            <TextBlock x:Name="txtCity" Grid.Column="1"/>
                            <TextBlock Text="Контактні дані:" FontWeight="Bold" Grid.Column="2"/>
                            <TextBlock x:Name="txtPhone" Grid.Column="3"/>
                        </Grid>

                        <TextBlock Text="Про себе:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBlock x:Name="txtAbout"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"
                                   Foreground="#444"/>
                    </StackPanel>
                </Border>

                <!-- Книги -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Книги користувача:"
                   FontWeight="Bold"
                   FontSize="15"
                   Margin="0,0,0,10"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                            <ItemsControl x:Name="BooksList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border 
                                            Background="#F3F3F3"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="10"
                                            Margin="6"
                                            Cursor="Hand">

                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="Gray" BlurRadius="5" Opacity="0.3"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E8E8E8"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Переглянути" Click="ContextMenu_View_Click"/>
                                                    <MenuItem Header="Поскаржитися" Click="ContextMenu_Report_Click"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>


                                            <StackPanel HorizontalAlignment="Center">
                                                <Image Source="{Binding ImagePath}"
                                                   Height="150"
                                                   Width="110"
                                                   Stretch="UniformToFill"
                                                   Margin="0,5,0,5"
                                                   SnapsToDevicePixels="True"/>

                                                <TextBlock Text="{Binding Title}"
                                                   FontWeight="Bold"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,3"/>

                                                <TextBlock Text="{Binding Author}"
                                                   FontSize="13"
                                                   TextAlignment="Center"
                                                   Foreground="#444"/>

                                                <TextBlock Text="{Binding DealType}"
                                                   Foreground="#2C3E50"
                                                   FontSize="12"
                                                   TextDecorations="Underline"
                                                   Cursor="Hand"
                                                   TextAlignment="Center"
                                                   Margin="0,3,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Назад -->
                        <Button Content="← Назад"
                Width="130"
                Height="40"
                HorizontalAlignment="Left"
                Background="#555"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"
                Margin="0,10,0,0"
                Click="BackButton_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</Window>