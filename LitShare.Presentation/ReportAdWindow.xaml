<Window x:Class="LitShare.Presentation.ReportAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="0,40,0,40">
        <Grid Margin="20,0,20,0" VerticalAlignment="Top">
            <TextBlock Text="LitShare"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#444"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

            <Button Content="Мій профіль"
                    Background="#555"
                    Foreground="White"
                    Padding="10,5"
                    Width="110"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"/>
        </Grid>

        <Border Width="780"
                MaxHeight="700" 
                MinHeight="500"
                Padding="50"
                Background="#f9f9f9"
                CornerRadius="8"
                BorderBrush="#ddd"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center">

                    <TextBlock Text="Звіт про проблему"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Оберіть проблему:"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <StackPanel>
                        <RadioButton x:Name="FalseInfoRadio" Content="Неправдива інформація в оголошенні" GroupName="ReportReason" Margin="0,5"/>
                        <RadioButton x:Name="SpamRadio" Content="Неприпустимий контент або спам" GroupName="ReportReason" Margin="0,5"/>
                        <RadioButton x:Name="ExchangeRadio" Content="Проблеми з обміном" GroupName="ReportReason" Margin="0,5"/>
                        <RadioButton x:Name="OtherRadio" Content="Інше" GroupName="ReportReason" Margin="0,5"/>
                    </StackPanel>

                    <Grid Margin="0,20,0,10">
                        <TextBox x:Name="DetailsTextBox"
                                 Height="120"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                        <TextBlock x:Name="PlaceholderText"
                                   Text="Опишіть проблему детальніше..."
                                   Foreground="Gray"
                                   Margin="5,5,0,0"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Top"
                                   Padding="2"
                                   FontStyle="Italic"
                                   Visibility="Visible"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button Content="Надіслати"
                                Width="180"
                                Height="40"
                                Background="#555"
                                Foreground="White"
                                Margin="0,0,10,0"
                                Click="SubmitButton_Click"/>

                        <Button Content="&lt; Назад"
                                Width="180"
                                Height="40"
                                Background="White"
                                BorderBrush="#555"
                                Foreground="#333"
                                Click="BackButton_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusMessage"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="Green"
                               Margin="0,15,0,10"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               LineHeight="22"
                               Padding="4"
                               SnapsToDevicePixels="True"
                               UseLayoutRounding="True"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
