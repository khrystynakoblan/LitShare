<Window x:Class="LitShare.Presentation.ReportAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>

        <!-- Верхня панель -->
        <Grid Margin="20,20,20,0" VerticalAlignment="Top">
            <TextBlock Text="LitShare"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#444"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

            <Button Content="Мій профіль"
                    Background="#555"
                    Foreground="White"
                    Padding="10,5"
                    Width="110"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"/>
        </Grid>

        <!-- Центрований, розтягнутий блок -->
        <Border Width="780"
                Height="500"
                Padding="50"
                Background="#f9f9f9"
                CornerRadius="8"
                BorderBrush="#ddd"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Звіт про проблему"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Оберіть проблему:"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <StackPanel>
                    <RadioButton x:Name="FalseInfoRadio" Content="Неправдива інформація в оголошенні" GroupName="ReportReason" Margin="0,5"/>
                    <RadioButton x:Name="SpamRadio" Content="Неприпустимий контент або спам" GroupName="ReportReason" Margin="0,5"/>
                    <RadioButton x:Name="ExchangeRadio" Content="Проблеми з обміном" GroupName="ReportReason" Margin="0,5"/>
                    <RadioButton x:Name="OtherRadio" Content="Інше" GroupName="ReportReason" Margin="0,5"/>
                </StackPanel>

                <!-- TextBox з Placeholder -->
                <Grid Margin="0,20,0,10">
                    <TextBox x:Name="DetailsTextBox"
                             Height="120"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                    <TextBlock x:Name="PlaceholderText"
                               Text="Опишіть проблему детальніше..."
                               Foreground="Gray"
                               Margin="5,5,0,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Padding="2"
                               FontStyle="Italic"
                               Visibility="Visible"/>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <Button Content="Надіслати"
                            Width="180"
                            Height="40"
                            Background="#555"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Click="SubmitButton_Click"/>

                    <Button Content="&lt; Назад"
                            Width="180"
                            Height="40"
                            Background="White"
                            BorderBrush="#555"
                            Foreground="#333"
                            Click="BackButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>