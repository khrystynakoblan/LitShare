<Window x:Class="LitShare.Presentation.MyBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мої книги" Height="700" Width="1200"
        WindowState="Maximized"
        Background="#FFF9F9F9">

    <DockPanel Margin="20">

        <!-- Верхня панель -->
        <DockPanel DockPanel.Dock="Top" Height="40" Margin="0,0,0,20">
            <!-- Кнопка головної сторінки -->
            <Button x:Name="HomeButton"
                    Content="LitShare"
                    FontSize="24"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="Black"
                    Cursor="Hand"
                    Click="HomeButton_Click"/>
            <!-- Кнопка Назад -->
            <Button x:Name="BackButton"
                    Content="← Назад"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="15,0,10,0"
                    Padding="10,0"
                    Background="#555"
                    Foreground="White"
                    BorderBrush="#CCC"
                    Cursor="Hand"
                    Click="BackButton_Click"/>

            <!-- Поле пошуку -->
            <Grid Height="30" Margin="20,0,20,0">
                <TextBox x:Name="SearchTextBox"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Padding="5"/>
                <TextBlock Text="Пошук..." IsHitTestVisible="False"
                           VerticalAlignment="Center" Padding="7,0,0,0"
                           Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </DockPanel>

        <!-- Основна частина -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid HorizontalAlignment="Center">
                <ItemsControl x:Name="BooksItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                    Margin="10" Width="220" Height="280" CornerRadius="8">
                                <StackPanel>
                                    <Image Source="{Binding PhotoUrl}"
                                           Height="180" Stretch="UniformToFill"
                                           Margin="5" />
                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Author}" FontSize="11" Foreground="Gray" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding City}" FontSize="11" Foreground="Gray" TextAlignment="Center"/>

                                        <!-- Кнопка редагування -->
                                        <Button Content="Редагувати"
                                            Background="#333"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            Margin="10,8,10,0"
                                            Padding="5,2"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            HorizontalAlignment="Center"
                                            Click="EditBookButton_Click"/>
                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
