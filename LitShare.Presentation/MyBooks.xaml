<Window x:Class="LitShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare" Height="700" Width="900" Background="#FFF9F9F9">
    <DockPanel Margin="20">
        <!-- Верхня панель -->
        <DockPanel DockPanel.Dock="Top" Height="40" Margin="0,0,0,20">
            <!-- Логотип ліворуч -->
            <TextBlock Text="LitShare" FontSize="24" FontWeight="Bold" 
                       VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,15,0"/>

            <!-- Кнопка профілю праворуч -->
            <Button Content="Мій профіль" Background="#333" Foreground="White" 
                    Padding="15,5" FontWeight="Bold" BorderThickness="0"
                    Cursor="Hand" DockPanel.Dock="Right" VerticalAlignment="Center"/>

            <!-- Поле пошуку в центрі -->
            <Grid Height="30" Margin="20,0,20,0">
                <TextBox x:Name="SearchTextBox" VerticalAlignment="Center" 
                         VerticalContentAlignment="Center" Padding="5"/>
                <TextBlock Text="Пошук..." IsHitTestVisible="False" 
                           VerticalAlignment="Center" Padding="7,0,0,0"
                           Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </DockPanel>

        <!-- Заголовок -->
        <TextBlock Text="Мої книги" FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center" Margin="0,20,0,20" DockPanel.Dock="Top"/>

        <!-- Сітка книжок -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="4"  HorizontalAlignment="Center" Margin="0,0,0,20">
                <!-- Картка книги -->
                <Border BorderBrush="#DDD" BorderThickness="1" Margin="10" CornerRadius="8" Background="White">
                    <StackPanel Margin="10">
                        <!-- Обкладинка -->
                        <Border Width="120" Height="160" Background="#E0E0E0" CornerRadius="4"
                                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="🖼️" FontSize="32" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <!-- Інформація про книгу -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="Назва" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Автор" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                            <TextBlock Text="Місто" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <!-- Кнопка редагування -->
                        <Button Content="Редагувати" Height="30" 
                                Background="#333" Foreground="White"   
                                BorderThickness="0" Cursor="Hand"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>
    </DockPanel>
</Window>