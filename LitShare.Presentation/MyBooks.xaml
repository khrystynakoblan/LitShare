<Window x:Class="LitShare.Presentation.MyBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare" Height="700" Width="900" Background="#FFF9F9F9">

    <DockPanel Margin="20">
        <DockPanel DockPanel.Dock="Top" Height="40" Margin="0,0,0,20">

            <TextBlock Text="LitShare" FontSize="24" FontWeight="Bold"
                       VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,15,0"/>

            <Button Content="Мій профіль" Background="#333" Foreground="White"
                    Padding="15,5" FontWeight="Bold" BorderThickness="0"
                    Cursor="Hand" DockPanel.Dock="Right" VerticalAlignment="Center"/>

            <Grid Height="30" Margin="20,0,20,0">
                <TextBox x:Name="SearchTextBox" VerticalAlignment="Center"
                         VerticalContentAlignment="Center" Padding="5"/>
                <TextBlock Text="Пошук..." IsHitTestVisible="False"
                           VerticalAlignment="Center" Padding="7,0,0,0"
                           Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </DockPanel>

        <TextBlock Text="Мої книги" FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center" Margin="0,20,0,20" DockPanel.Dock="Top"/>

        <ScrollViewer x:Name="BooksScrollViewer" VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="BooksGrid" Columns="4" HorizontalAlignment="Center" Margin="0,0,0,20">
            </UniformGrid>
        </ScrollViewer>
    </DockPanel>
</Window>
