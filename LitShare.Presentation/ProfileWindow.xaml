<Window x:Class="LitShare.Presentation.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitShare.Presentation"
        mc:Ignorable="d"
        Title="LitShare - Мій профіль" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F9F9F9">

    <Window.Resources>
        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="15, 10" />
            <Setter Property="Margin" Value="10, 0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButtonStyle}">
            <Setter Property="Background" Value="#555" />
            <Setter Property="Padding" Value="20, 10" />
        </Style>
        <Style x:Key="SideBarButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButtonStyle}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0, 10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid Margin="15, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Content="LitShare"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="Black"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="HomeButton_Click"/>
                <Button Grid.Column="1" Content="← Назад" 
                        Style="{StaticResource BackButtonStyle}"
                        Margin="20,0,0,0"
                        Click="BackButton_Click"/>
                <TextBlock Grid.Column="2" Text="Мій профіль" FontSize="20" FontWeight="SemiBold" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="10,10,10,54" Padding="15">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <Ellipse x:Name="userPhotoEllipse" Width="150" Height="150" Stroke="#AAA" StrokeThickness="2" Margin="15,47,15,0"/>


                        <TextBlock x:Name="txtNameSidebar" Grid.Row="2" Text="..." HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,60,0,0">
                        <Button Content="Додати книгу" 
                                Style="{StaticResource SideBarButtonStyle}" 
                                Click="AddBookButton_Click" Width="183"/>
                        <Button Content="Мої книги" 
                                Style="{StaticResource SideBarButtonStyle}" 
                                Click="MyBooksButton_Click" Width="183" Height="40"/>
                        <Button Content="Редагувати профіль" 
                                Style="{StaticResource SideBarButtonStyle}" 
                                Click="EditProfileButton_Click"  Width="183" Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel>
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="25" Margin="0,0,0,20">
                        <StackPanel>
                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Padding="0,0,0,5" Margin="0,0,0,20">
                                <TextBlock Text="Основна інформація:" FontSize="18" FontWeight="Bold"/>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="Ім'я:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock x:Name="txtNameMain" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5, 10">
                                    <TextBlock Text="Область:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock x:Name="txtRegion" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5, 10">
                                    <TextBlock Text="Район:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock x:Name="txtDistrict" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="5, 10">
                                    <TextBlock Text="Населений пункт:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock x:Name="txtCity" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="Контактні дані:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock x:Name="txtPhone" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="EMAIL:" FontSize="14" FontWeight="Bold" Foreground="#555" RenderTransformOrigin="1.221,-1.86" Height="22" Width="467"/>
                                    <TextBlock x:Name="txtEmail" Text="..." FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="25" Margin="0,0,0,20" Height="184">
                        <StackPanel>
                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Padding="0,0,0,5" Margin="0,0,0,15">
                                <TextBlock Text="Про себе:" FontSize="18" FontWeight="Bold"/>
                            </Border>

                            <TextBlock x:Name="txtAbout" Text="..."
                                         FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>