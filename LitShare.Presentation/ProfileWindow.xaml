<Window x:Class="LitShare.Presentation.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitShare.Presentation"
        mc:Ignorable="d"
        Title="LitShare - Мій профіль" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Window.Resources>
        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="15, 10" />
            <Setter Property="Margin" Value="10, 0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButtonStyle}">
            <Setter Property="Background" Value="#555" />
            <Setter Property="Padding" Value="20, 10" />
        </Style>
        <Style x:Key="SideBarButtonStyle" TargetType="Button" BasedOn="{StaticResource ProfileButtonStyle}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0, 10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid Margin="15, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="LitShare" Grid.Column="0" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="← Назад" 
                        Style="{StaticResource BackButtonStyle}"
                        Margin="20,0,0,0"
                        Click="BackButton_Click"/>
                <TextBlock Grid.Column="2" Text="Мій профіль" FontSize="20" FontWeight="SemiBold" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="10" Padding="15">

                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Ellipse Grid.Row="0" Width="150" Height="150" Fill="#CCC" Stroke="#AAA" StrokeThickness="2" Margin="15,47,15,0" Grid.RowSpan="2" VerticalAlignment="Top">
                        <Ellipse.OpacityMask>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Path Fill="Black" Stretch="Uniform"
                                          Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M12,5C13.66,5 15,6.34 15,8C15,9.66 13.66,11 12,11C10.34,11 9,9.66 9,8C9,6.34 10.34,5 12,5M12,19.2C9.5,19.2 7.29,17.92 6,15.98C6.03,13.99 10,12.9 12,12.9C13.99,12.9 17.97,13.99 18,15.98C16.71,17.92 14.5,19.2 12,19.2Z" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Ellipse.OpacityMask>
                    </Ellipse>

                    <TextBlock Grid.Row="2" Text="Ім'я" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,57"/>

                    <Button Grid.Row="3" Content="Додати книгу" 
                            Style="{StaticResource SideBarButtonStyle}" 
                            Click="AddBookButton_Click"/>

                    <Button Grid.Row="4" Content="Мої книги" 
                            Style="{StaticResource SideBarButtonStyle}" 
                            Click="MyBooksButton_Click"/>

                    <Button Grid.Row="5" Content="Редагувати профіль" 
                            Style="{StaticResource SideBarButtonStyle}" 
                            Click="EditProfileButton_Click"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel>
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="25" Margin="0,0,0,20">
                        <StackPanel>
                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Padding="0,0,0,5" Margin="0,0,0,20">
                                <TextBlock Text="Основна інформація:" FontSize="18" FontWeight="Bold"/>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="Ім'я:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5, 10">
                                    <TextBlock Text="Область:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="Район:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5, 10">
                                    <TextBlock Text="Населений пункт:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="Контактні дані:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum dolor" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="5, 10">
                                    <TextBlock Text="EMAIL:" FontSize="14" FontWeight="Bold" Foreground="#555"/>
                                    <TextBlock Text="Lorem ipsum" FontSize="15" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="25" Margin="0,0,0,20" Height="194">
                        <StackPanel>
                            <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Padding="0,0,0,5" Margin="0,0,0,15">
                                <TextBlock Text="Про себе:" FontSize="18" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="Lorem ipsum dolor sit amet et delectus accommodare his consul copiosae legendos at vix ad putent delectus delicata usu. Vidit dissentiet eos cu eum an brute copiosae hendrerit. Eos erant dolorum an. Per facer affert ut. Mei iisque mentitum moderatius cu."
                                       FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>