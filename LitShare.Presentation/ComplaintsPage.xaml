<Window x:Class="LitShare.Presentation.ComplaintsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="Список скарг" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Border Margin="30" Background="#D9D9D9" Padding="20" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Список скарг"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0 0 0 12"/>

            <DataGrid Grid.Row="1"
                      x:Name="ComplaintsGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      BorderThickness="1"
                      BorderBrush="Gray"
                      RowBackground="White"
                      AlternatingRowBackground="#F5F5F5"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontSize="14"
                      MinRowHeight="30"
                      MouseDoubleClick="ComplaintsGrid_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Скарга" Width="1.8*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="1200" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Назва книги" Binding="{Binding BookTitle}" Width="300"/>
                    <DataGridTextColumn Header="Ім'я" Binding="{Binding UserName}" Width="180"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>
