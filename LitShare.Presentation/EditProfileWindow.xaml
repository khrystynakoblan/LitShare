<Window x:Class="LitShare.Presentation.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare — Редагування профілю"
        Height="720" Width="940"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Верхня панель -->
            <RowDefinition Height="*"/>   <!-- Основний контент -->
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="LitShare"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <TextBlock Text="Мій профіль"
                       FontSize="16"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       Margin="0,0,10,0"/>
        </Grid>

        <!--  Основна частина -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/> 
                <ColumnDefinition Width="*"/>   
            </Grid.ColumnDefinitions>

            <!-- Фото -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,10,20,0">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="100"
                        Width="140" Height="140" HorizontalAlignment="Center">
                    <Ellipse Fill="#EAEAEA"/>
                </Border>
                <Button Content="Змінити фото"
                        Width="140"
                        Margin="0,10,0,30"
                        Background="#333"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Поля для редагування -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="Основна інформація"
                           FontSize="17"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- Ім’я -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ім’я:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Text="Іван" Grid.Column="1" IsReadOnly="True" Background="#EEE"/>
                </Grid>

                <!-- Прізвище -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Прізвище:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Text="Петренко" Grid.Column="1" IsReadOnly="True" Background="#EEE"/>
                </Grid>

                <!-- Район -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Район:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Область -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Область:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Населений пункт -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Населений пункт:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Email -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Контактні дані -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Контактні дані:" FontWeight="Bold" Grid.Column="0"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Про себе -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Про себе:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox Grid.Column="1" Padding="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>

                <!-- Кнопки -->
                <Grid Margin="120,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/> 
                        <ColumnDefinition Width="1*"/> 
                        <ColumnDefinition Width="1*"/> 
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Зберегти зміни"
                            Width="140" Height="40"
                            Background="#2E7D32"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Left"
                            Cursor="Hand"/>

                    <Button Grid.Column="1"
                            Content="Скасувати"
                            Width="140" Height="40"
                            Background="#BDBDBD"
                            FontWeight="Bold"
                            Cursor="Hand"
                            HorizontalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Content="Видалити профіль"
                            Height="40"
                            Width="160"
                            Background="#D32F2F"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>