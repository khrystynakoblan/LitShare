<Window x:Class="LitShare.Presentation.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare — Редагування профілю"
        Height="720" Width="940"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LitShare як кнопка -->
            <Button Content="LitShare"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Click="HomeButton_Click"/>

            <!-- Мій профіль як кнопка -->
            <Button Content="Мій профіль"
                    FontSize="16"
                    Foreground="Gray"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    Click="MyProfileButton_Click"/>
        </Grid>

        <!-- Основна частина -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель (аватар) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,10,20,0">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="100"
                        Width="140" Height="140" HorizontalAlignment="Center">
                    <Ellipse Fill="#EAEAEA"/>
                </Border>
                <!-- підпис під фото забрано за вимогою -->
            </StackPanel>

            <!-- Права колонка -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="Основна інформація"
                           FontSize="17"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- Ім’я -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ім’я:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Text="Іван" Grid.Column="1" IsReadOnly="True" Background="#EEE" Padding="5"/>
                </Grid>

                <!-- Прізвище -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Прізвище:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Text="Петренко" Grid.Column="1" IsReadOnly="True" Background="#EEE" Padding="5"/>
                </Grid>

                <!-- Район -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Район:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Область -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Область:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Населений пункт -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Населений пункт:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Email -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Контактні дані -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Контактні дані:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Padding="5"/>
                </Grid>

                <!-- Про себе -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Про себе:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox Grid.Column="1" Padding="5" Height="120" TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>

                <!-- Кнопки: ліва межа = 120 (як у полів), сіра по центру, червона до правого краю -->
                <Grid Margin="120,0,0,0" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Зберегти зміни"
                            Width="160" Height="44"
                            Background="#2E7D32"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>

                    <Button Grid.Column="1"
                            Content="Скасувати"
                            Width="160" Height="44"
                            Background="#BDBDBD"
                            Foreground="Black"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="2"
                            Content="Видалити профіль"
                            Width="180" Height="44"
                            Background="#D32F2F"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Click="DeleteButton_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>