<Window x:Class="LitShare.Presentation.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare — Редагування профілю"
        Height="720" Width="940"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Фіксована верхня панель -->
            <RowDefinition Height="*"/>
            <!-- Основна частина -->
        </Grid.RowDefinitions>

        <!--  Верхня панель -->
        <Button Content="LitShare"
            FontSize="22"
            FontWeight="Bold"
            Foreground="#2C3E50"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Click="HomeButton_Click"/>

            <!-- Логотип зліва -->
            <TextBlock Text="LitShare"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <!-- Кнопка “Мій профіль” справа -->
            <Button Content="Мій профіль"
                    FontSize="16"
                    Foreground="Gray"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Column="2"
                    Click="MyProfileButton_Click"/>
        </Grid>

        <!--  Основна частина -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фото + кнопка -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,10,20,0" HorizontalAlignment="Center">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="100"
                        Width="140" Height="140" HorizontalAlignment="Center">
                    <Ellipse x:Name="userPhotoEllipse" Fill="#EAEAEA"/>
                </Border>

                <Button Content="Змінити фото"
                        Width="150" Height="34" Margin="0,12,0,0"
                        Background="#333"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="ChangePhotoButton_Click"/>
            </StackPanel>

            <!--  Дані користувача -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock Text="Основна інформація"
                           FontSize="17"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!-- Ім’я -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ім’я:" FontWeight="Bold"/>
                    <TextBox x:Name="txtFirstName"
                             IsReadOnly="True"
                             Background="#EEE"
                             Grid.Column="1"/>
                </Grid>

                <!-- Прізвище -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Прізвище:" FontWeight="Bold"/>
                    <TextBox x:Name="txtLastName"
                             IsReadOnly="True"
                             Background="#EEE"
                             Grid.Column="1"/>
                </Grid>

                <!-- Область -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Область:" FontWeight="Bold"/>
                    <TextBox x:Name="txtRegion" Grid.Column="1"/>
                </Grid>

                <!-- Район -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Район:" FontWeight="Bold"/>
                    <TextBox x:Name="txtDistrict" Grid.Column="1"/>
                </Grid>

                <!-- Місто -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Місто:" FontWeight="Bold"/>
                    <TextBox x:Name="txtCity" Grid.Column="1"/>
                </Grid>

                <!-- Контактні дані -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Контактні дані:" FontWeight="Bold"/>
                    <TextBox x:Name="txtPhone" Grid.Column="1"/>
                </Grid>

                <!-- Про себе -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Про себе:" FontWeight="Bold"/>
                    <TextBox x:Name="txtAbout"
                             Grid.Column="1"
                             AcceptsReturn="True"
                             Height="100"
                             TextWrapping="Wrap"/>
                </Grid>

                <!--  Кнопки під формою -->
                <Grid Margin="120,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Зберегти зміни"
                            Height="42"
                            Background="#2E7D32"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>

                    <Button Grid.Column="2"
                            Content="Скасувати"
                            Height="42"
                            Background="#BDBDBD"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="4"
                            Content="Видалити профіль"
                            Height="42"
                            Background="#D32F2F"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="DeleteButton_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>