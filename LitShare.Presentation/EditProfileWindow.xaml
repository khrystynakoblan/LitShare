<Window x:Class="LitShare.Presentation.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare"
        Height="700"
        Width="900"
        Background="#FFF9F9F9"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Стиль для полів з валідацією -->
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Tag" Value="Error">
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel Margin="20">
        <!-- Верхня панель -->
        <DockPanel DockPanel.Dock="Top" Height="40" Margin="0,0,0,30">
            <Button x:Name="HomeButton"
                    Content="LitShare"
                    FontSize="24"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="Black"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Margin="0,0,15,0"
                    Click="HomeButton_Click"/>

            <TextBlock Text="Редагування профілю"
                       FontSize="18"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Основна частина -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Фото профілю -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border Background="#E0E0E0" Width="200" Height="200" CornerRadius="100">
                    <Ellipse x:Name="userPhotoEllipse" Fill="#EAEAEA"/>
                </Border>
                <Button x:Name="ChangePhotoButton"
                        Content="Змінити фото"
                        Background="#333"
                        Foreground="White"
                        Width="200"
                        Height="35"
                        Margin="0,15,0,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Click="ChangePhotoButton_Click"/>
            </StackPanel>

            <!-- Поля вводу -->
            <Grid Grid.Column="1" Margin="40,0,0,0" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ім'я -->
                <Grid Margin="0,10" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ім'я" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                    <TextBox x:Name="txtFirstName" Grid.Column="1" Height="35" IsReadOnly="True" Background="#EEE" Padding="8,2"/>
                </Grid>

                <!-- Область -->
                <StackPanel Margin="0,10" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Область" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="txtRegion" Grid.Column="1" Height="35" Padding="8,2" TextChanged="ValidateField"/>
                    </Grid>
                    <TextBlock x:Name="errRegion" Foreground="Red" FontSize="12" Margin="120,2,0,0"/>
                </StackPanel>

                <!-- Район -->
                <StackPanel Margin="0,10" Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Район" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="txtDistrict" Grid.Column="1" Height="35" Padding="8,2" TextChanged="ValidateField"/>
                    </Grid>
                    <TextBlock x:Name="errDistrict" Foreground="Red" FontSize="12" Margin="120,2,0,0"/>
                </StackPanel>

                <!-- Місто -->
                <StackPanel Margin="0,10" Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Місто" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="txtCity" Grid.Column="1" Height="35" Padding="8,2" TextChanged="ValidateField"/>
                    </Grid>
                    <TextBlock x:Name="errCity" Foreground="Red" FontSize="12" Margin="120,2,0,0"/>
                </StackPanel>

                <!-- Телефон -->
                <StackPanel Margin="0,10" Grid.Row="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Телефон" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox x:Name="txtPhone" Grid.Column="1" Height="35" Padding="8,2" TextChanged="ValidateField"/>
                    </Grid>
                    <TextBlock x:Name="errPhone" Foreground="Red" FontSize="12" Margin="120,2,0,0"/>
                </StackPanel>

                <!-- Про себе -->
                <Grid Grid.Row="5" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Про себе" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0"/>
                    <TextBox x:Name="txtAbout"
                             Grid.Column="1"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"
                             Padding="8"/>
                </Grid>
            </Grid>

            <!-- Кнопки -->
            <StackPanel Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,50">
                <Button Content="Зберегти зміни"
                        x:Name="SaveButton"
                        Click="SaveButton_Click"
                        Background="#2E7D32"
                        Foreground="White"
                        Width="160"
                        Height="40"
                        Margin="0,0,15,0"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"/>
                <Button Content="Скасувати"
                        x:Name="CancelButton"
                        Click="CancelButton_Click"
                        Background="#BDBDBD"
                        Foreground="Black"
                        Width="140"
                        Height="40"
                        Margin="0,0,15,0"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"/>
                <Button Content="Видалити профіль"
                        x:Name="DeleteButton"
                        Click="DeleteButton_Click"
                        Background="#D32F2F"
                        Foreground="White"
                        Width="160"
                        Height="40"
                        BorderThickness="0"
                        FontWeight="Bold"
                        FontSize="14"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
