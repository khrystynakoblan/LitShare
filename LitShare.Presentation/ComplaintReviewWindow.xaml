<Window x:Class="LitShare.Presentation.ComplaintReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitShare.Presentation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Розгляд скарги" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <Style x:Key="AppButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="15, 10" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Grid>
        <Border x:Name="Toast"
        Background="#323232"
        CornerRadius="6"
        Padding="12 8"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Margin="0 0 0 40"
        Opacity="0"
        Visibility="Collapsed">

            <TextBlock x:Name="ToastText"
               Foreground="White"
               FontSize="16"/>
        </Border>

        <!-- Кнопка Назад -->
        <Button Content="← Назад" 
                Style="{StaticResource AppButtonStyle}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="20,20,0,0"
                Click="BackButton_Click"/>

        <Border BorderBrush="#CCC" BorderThickness="1" Background="White"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Padding="20" 
                Width="700" 
                CornerRadius="5" >

            <StackPanel>

                <TextBlock Text="Розгляд скарги"
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <Grid Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Скарга:" FontWeight="Bold" Margin="0,5,10,5" FontSize="16"/>
                    <TextBlock x:Name="txtComplaintReason" Grid.Row="0" Grid.Column="1" Text="..." TextWrapping="Wrap" Margin="0,5,0,5" FontSize="16"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Назва:" FontWeight="Bold" Margin="0,5,10,5" FontSize="16"/>
                    <TextBlock x:Name="txtPostTitle" Grid.Row="1" Grid.Column="1" Text="..." TextWrapping="Wrap" Margin="0,5,0,5" FontSize="16"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Автор:" FontWeight="Bold" Margin="0,5,10,5" FontSize="16"/>
                    <TextBlock x:Name="txtPostAuthor" Grid.Row="2" Grid.Column="1" Text="..." TextWrapping="Wrap" Margin="0,5,0,5" FontSize="16"/>
                </Grid>


                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Контейнер для зображення з бази даних -->
                    <Border Grid.Column="0" 
                            Width="150" Height="150" Background="#EEE" 
                            BorderBrush="#DDD" 
                            BorderThickness="1"
                            VerticalAlignment="Top"
                            Margin="0,0,20,0">
                        <Image x:Name="postImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Опис:" FontWeight="Bold" Margin="0,0,0,5" FontSize="16"/>
                        <TextBlock x:Name="txtPostDescription" Text="..."
                                     TextWrapping="Wrap"
                                     LineHeight="20"
                                     FontSize="16"/>
                    </StackPanel>
                </Grid>


                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Content="Підтвердити скаргу" 
                            Style="{StaticResource AppButtonStyle}"
                            HorizontalAlignment="Left"
                            Click="ApproveButton_Click"/>

                    <Button Grid.Column="1" 
                            Content="Відхилити скаргу" 
                            Style="{StaticResource AppButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="RejectButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>