<Window x:Class="LitShare.Presentation.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitShare.Presentation"
        mc:Ignorable="d"
        Title="LitShare - Вхід" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Padding="10,5">
                                <ContentPresenter ContentSource="Header" />
                            </Border>
                            <Border Name="Underline" Height="2" Background="Black" VerticalAlignment="Bottom" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter TargetName="Underline" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="LightGray" BorderThickness="1" Background="White"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Padding="25" Width="350">

        <TabControl x:Name="mainTabs" BorderThickness="0" Background="Transparent">

            <TabItem Header="Увійти" x:Name="loginTab">
                <StackPanel>
                    <TextBlock Text="Електронна пошта:" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtLoginEmail" Padding="5"/>

                    <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="txtLoginPassword" Padding="5"/>

                    <Button Content="Увійти" Padding="10" Margin="0,20,0,0" Background="#333" Foreground="White" Click="Button_Click_Login"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Зареєструватися" IsSelected="True">
                <StackPanel>
                    <TextBlock Text="Ім'я:"/>
                    <TextBox x:Name="txtName" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Електронна пошта:"/>
                    <TextBox x:Name="txtEmail" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Пароль:"/>
                    <PasswordBox x:Name="txtPassword" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Область:"/>
                    <TextBox x:Name="txtRegion" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Район:"/>
                    <TextBox x:Name="txtDistrict" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Населений пункт:"/>
                    <TextBox x:Name="txtCity" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Створюючи профіль, ви погоджуєтеся з Умовами використання"
                               TextWrapping="Wrap" FontSize="10" Foreground="Gray" Margin="0,10,0,15"/>

                    <Button x:Name="RegisterButton" Content="Створити акаунт" Padding="10" 
                            Background="#333" Foreground="White" Click="Button_Click_Register"/>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Border>
</Window>