<Window x:Class="LitShare.Presentation.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitShare.Presentation"
        mc:Ignorable="d"
        Title="LitShare - Вхід" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <!-- Стиль вкладок -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" Padding="15,8">
                                <ContentPresenter ContentSource="Header" />
                            </Border>
                            <Border Name="Underline" Height="3" Background="Black" VerticalAlignment="Bottom" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter TargetName="Underline" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray" />
                                <Setter Property="FontSize" Value="15" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="LightGray" BorderThickness="1" Background="White"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Padding="35" Width="400" CornerRadius="10" >

        <TabControl x:Name="mainTabs" BorderThickness="0" Background="Transparent">

            <!-- === ВКЛАДКА УВІЙТИ === -->
            <TabItem Header="Увійти" x:Name="loginTab" HorizontalAlignment="Left" Width="158" Margin="-14,0,0,0">
                <StackPanel>
                    <TextBlock Text="Електронна пошта:" Margin="0,15,0,5" FontSize="14"/>
                    <TextBox x:Name="txtLoginEmail" Padding="10" FontSize="14"/>

                    <TextBlock Text="Пароль:" Margin="0,15,0,5" FontSize="14"/>
                    <PasswordBox x:Name="txtLoginPassword" Padding="10" FontSize="14"/>

                    <Button Content="Увійти" Padding="12" Margin="0,30,0,0" 
                            FontSize="15" FontWeight="Bold"
                            Background="#333" Foreground="White" 
                            Click="Button_Click_Login"
                            BorderThickness="0" 
                            Cursor="Hand"/>
                </StackPanel>
            </TabItem>

            <!-- === ВКЛАДКА ЗАРЕЄСТРУВАТИСЯ === -->
            <TabItem Header="Зареєструватися" IsSelected="True" Margin="5,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Ім'я:" FontSize="14"/>
                        <TextBox x:Name="txtName" Padding="10" Margin="0,5,0,15" FontSize="14"/>

                        <TextBlock Text="Електронна пошта:" FontSize="14"/>
                        <TextBox x:Name="txtEmail" Padding="10" Margin="0,5,0,15" FontSize="14"/>

                        <TextBlock Text="Пароль:" FontSize="14"/>
                        <PasswordBox x:Name="txtPassword" Padding="10" Margin="0,5,0,15" FontSize="14"/>

                        <TextBlock Text="Область:" FontSize="14"/>
                        <TextBox x:Name="txtRegion" Padding="10" Margin="0,5,0,15" FontSize="14"/>

                        <TextBlock Text="Район:" FontSize="14"/>
                        <TextBox x:Name="txtDistrict" Padding="10" Margin="0,5,0,15" FontSize="14"/>

                        <TextBlock Text="Населений пункт:" FontSize="14"/>
                        <TextBox x:Name="txtCity" Padding="10" Margin="0,5,0,20" FontSize="14"/>

                        <TextBlock Text="Створюючи профіль, ви погоджуєтеся з Умовами використання"
                                   TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,10,0,20"/>

                        <Button x:Name="RegisterButton" Content="Створити акаунт" Padding="12" 
                                FontSize="15" FontWeight="Bold"
                                Background="#333" Foreground="White"
                                Click="Button_Click_Register"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Border>
</Window>
