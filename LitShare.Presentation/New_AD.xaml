<Window x:Class="LitShare.NewAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LitShare"
        Height="700"
        Width="900"
        Background="#FFF9F9F9"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="20">

        <!-- Верхня панель -->
        <DockPanel DockPanel.Dock="Top" Height="40" Margin="0,0,0,20">
            <Button x:Name="HomeButton"
                Content="LitShare"
                FontSize="24"
                FontWeight="Bold"
                Background="Transparent"
                BorderThickness="0"
                Foreground="Black"
                Cursor="Hand"
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Margin="0,0,15,0"
                Click="HomeButton_Click"/>

            <Button Content="Мій профіль"
                    Background="#4A4A4A"
                    Foreground="White"
                    Padding="15,5"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Height="30" 
                    Width="120" 
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    Click="MyProfile_Click"/>

            <TextBlock Text="Нове оголошення"
                       FontSize="18"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Основна частина -->
        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Фото -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Border Background="#E0E0E0" Width="230" Height="260" CornerRadius="3">
                    <Image x:Name="BookImage" Stretch="Uniform"/>
                </Border>
                <Button x:Name="AddPhotoButton"
                    Content="Додати фото"
                    Background="#333"
                    Foreground="White"
                    Width="229"
                    Height="35"
                    Margin="0,10,0,0"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Click="AddPhotoButton_Click"/>  
            </StackPanel>

            <!-- Поля вводу -->
            <!-- Поля вводу -->
            <Grid Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Назва книги -->
                <StackPanel Orientation="Vertical" Margin="0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Назва книги:" Width="100" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical">
                            <TextBox x:Name="TitleTextBox"
                         Width="350"
                         Height="30"
                         TextChanged="Field_TextChanged"/>
                            <TextBlock x:Name="TitleError"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"
                           Text="Введіть назву книги"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Автор книги -->
                <StackPanel Orientation="Vertical" Margin="0,10" Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Автор книги:" Width="100" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical">
                            <TextBox x:Name="AuthorTextBox"
                         Width="350"
                         Height="30"
                         TextChanged="Field_TextChanged"/>
                            <TextBlock x:Name="AuthorError"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"
                           Text="Введіть автора книги"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Жанр -->
                <StackPanel Orientation="Vertical" Margin="0,10" Grid.Row="2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Жанр:" Width="100" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical">
                            <ComboBox x:Name="GenreComboBox"
                          Width="350"
                          Height="30"
                          SelectionChanged="Field_SelectionChanged"/>
                            <TextBlock x:Name="GenreError"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"
                           Text="Оберіть жанр"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Тип угоди -->
                <StackPanel Orientation="Vertical" Margin="0,10" Grid.Row="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Тип угоди:" Width="100" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical">
                            <ComboBox x:Name="DealTypeComboBox"
                          Width="350"
                          Height="30"
                          SelectionChanged="Field_SelectionChanged"/>
                            <TextBlock x:Name="DealTypeError"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"
                           Text="Оберіть тип угоди"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>


            <!-- Опис -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,40,0,0">
                <TextBlock Text="Опис:"
               FontSize="16"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Margin="0,10"/>
                <TextBox x:Name="DescriptionTextBox"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             Height="85"
             Margin="20,10,20,0"
             VerticalScrollBarVisibility="Auto"
             Width="796"
             TextChanged="Field_TextChanged"/>
                <TextBlock x:Name="DescriptionError"
               Foreground="Red"
               FontSize="12"
               HorizontalAlignment="Center"
               Visibility="Collapsed"
               Text="Введіть опис книги"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,25,0,0">
                <Button Content="Додати оголошення"
                        x:Name="AddAdButton"
                        Click="AddAdButton_Click"
                        Background="#333"
                        Foreground="White"
                        Width="250"
                        Height="35"
                        Margin="25,0"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Cursor="Hand"/>
                <Button Content="Відхилити зміни"
                        x:Name="CancelButton"
                        Click="CancelButton_Click"
                        Background="#333"
                        Foreground="White"
                        Width="250"
                        Height="35"
                        Margin="25,0"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
